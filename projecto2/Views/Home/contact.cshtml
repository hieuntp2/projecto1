@{
    ViewBag.Title = "Contact Us";
}

<br />
<br />
<br />
<br />
<div class="row my-backgroud-shadow" style="min-height:500px;">
    <div class="col-md-6 col-lg-offset-3" style="top:30px;">
        <div class="box box-warning my-box-shadow">
            <div class="box-header">
                <h3 style="margin-top: 0px;">Send us email</h3>
            </div>

            <div class="box-body">
                <form action="/home/sendemail" method="post" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input name="email" type="email" placeholder="Your Email" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <textarea class="form-control" placeholder="Message" name="message" style="height:200px;"></textarea>
                        </div>
                    </div>

                    <div class="box-footer">
                        <div class="form-group">
                            <input type="submit" class="btn btn-warning pull-right" value="Send" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


