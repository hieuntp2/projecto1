@model projecto2.Models.Post

@{
    ViewBag.Title = "addPost";
}
<br />
<br />
<div class="section  my-backgroud-shadow">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="box my-box-shadow">
                <div class="box-header">
                    <h3>Thêm bài viết</h3>
                </div>
                <div class="box-body">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#wordtab" data-toggle="tab" aria-expanded="true">Word Editor</a></li>
                            <li class=""><a href="#rawhtmltab" data-toggle="tab" aria-expanded="false">Raw HTML</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="wordtab">
                                <form action="/admin/editPost" method="post">
                                    <div class="form-group">
                                        <input name="title" type="text" class="form-control" placeholder="Tiêu đề" autocomplete="off" />
                                    </div>
                                    <div class="form-group">
                                        <textarea id="editor1" name="content" class="form-control" placeholder="Nội dụng" style="height: 500px;"></textarea>
                                    </div>

                                    <div class="form-group">
                                        <input value="Lưu" type="submit" class="btn btn-warning pull-right" />
                                    </div>
                                </form>
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="rawhtmltab">
                                <form action="/admin/editPost" method="post">
                                    <div class="form-group">
                                        <input name="title" type="text" class="form-control" placeholder="Tiêu đề" autocomplete="off" />
                                    </div>
                                    <div class="form-group">
                                        <textarea name="content" class="form-control" placeholder="Nội dụng" style="height: 500px;"></textarea>
                                    </div>

                                    <div class="form-group">
                                        <input value="Lưu" type="submit" class="btn btn-warning pull-right" />
                                    </div>
                                </form>
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div>
                </div>
                <div class="box-footer">

                </div>
            </div>
        </div>
    </div>
</div>
<script src="//cdn.ckeditor.com/4.5.7/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor1');
</script>
